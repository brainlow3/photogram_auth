<div class="page-header">
  <h3><%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Last Online</dt>
      <dd><%= @user.last_sign_in_at%></dd>

    </dl>
    <dt>Images</dt>
    <% @photos.each do |photo| %>
    <tr>
      <td><img src="<%= photo.image %>"alt="<%= photo.caption %>"></td>
      <td><%= photo.caption %></td>
    </tr>
    <% end %>


  </div>
</div>
